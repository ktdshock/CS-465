<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>Travel - Bhaccasyoniztas Beach Resort</title>
	<link rel="stylesheet" href="/css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
			{{> header }}

			<div id="contents">
				<div class="box">
					<div>
						<div class="body">
							<h1>Travel</h1>
							<ul id="sites">
								{{#each trips}}
								<li>
									<a href="/travel"><img src="/images/{{image}}" alt="{{name}}"></a>
									<h2><a href="/travel">{{name}}</a></h2>
									<p>{{description}}</p>
								</li>
								{{/each}}
							</ul>
						</div>
					</div>
				</div>
			</div>

			{{> footer }}
		</div>
	</div>
</body>
</html>