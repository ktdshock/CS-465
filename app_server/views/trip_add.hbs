{{!-- Page Header --}}
<div class="container mt-5">
  <h2 class="text-center mb-4">Add a New Trip</h2>

  {{!-- Trip Add Form --}}
  <form action="/travel/add" method="POST" class="needs-validation" novalidate>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="code">Trip Code</label>
        <input type="text" class="form-control" id="code" name="code" required>
      </div>
      <div class="form-group col-md-6">
        <label for="name">Trip Name</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="length">Length (days)</label>
        <input type="number" class="form-control" id="length" name="length" required>
      </div>
      <div class="form-group col-md-4">
        <label for="start">Start Date</label>
        <input type="date" class="form-control" id="start" name="start" required>
      </div>
      <div class="form-group col-md-4">
        <label for="resort">Resort</label>
        <input type="text" class="form-control" id="resort" name="resort" required>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="perPerson">Price Per Person</label>
        <input type="text" class="form-control" id="perPerson" name="perPerson" required>
      </div>
      <div class="form-group col-md-6">
        <label for="image">Image File Name (e.g., beach1.jpg)</label>
        <input type="text" class="form-control" id="image" name="image">
      </div>
    </div>

    <div class="form-group">
      <label for="description">Trip Description</label>
      <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
    </div>

    <button type="submit" class="btn btn-success">Add Trip</button>
    <a href="/travel" class="btn btn-secondary ml-2">Cancel</a>
  </form>
</div>