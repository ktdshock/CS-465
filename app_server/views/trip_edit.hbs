<div class="container mt-5">
  <h2>Edit Trip: {{trip.name}}</h2>
  <form action="/travel/edit/{{trip.code}}" method="POST">
    <div class="form-group">
      <label for="name">Trip Name</label>
      <input type="text" class="form-control" id="name" name="name" value="{{trip.name}}" required>
    </div>

    <div class="form-group">
      <label for="length">Length</label>
      <input type="text" class="form-control" id="length" name="length" value="{{trip.length}}">
    </div>

    <div class="form-group">
      <label for="start">Start Date</label>
      <input type="text" class="form-control" id="start" name="start" value="{{trip.start}}">
    </div>

    <div class="form-group">
      <label for="resort">Resort</label>
      <input type="text" class="form-control" id="resort" name="resort" value="{{trip.resort}}">
    </div>

    <div class="form-group">
      <label for="perPerson">Price Per Person</label>
      <input type="text" class="form-control" id="perPerson" name="perPerson" value="{{trip.perPerson}}">
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" id="description" name="description" rows="3">{{trip.description}}</textarea>
    </div>

    <div class="form-group">
      <label for="image">Image Filename (e.g. reef1.jpg)</label>
      <input type="text" class="form-control" id="image" name="image" value="{{trip.image}}">
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="/travel" class="btn btn-secondary ml-2">Cancel</a>
  </form>
</div>
